mixin creaYeditaSoporte(soporte = {})
    form.agregar-proyecto(action=`/nuevo-soporte/${soporte.id || 0}` method="POST")        
        .campo 
            label(for="nombre") Nombre Soporte:
            input(value=soporte.nombre type="text" id="nombre" name="nombre" placeholder="Nombre Soporte")
        .campo.enviar
            input(type="submit" value=`${soporte.nombre ? 'Guardar' : 'Agregar'}` class="boton")